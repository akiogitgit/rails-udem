<section>
  <% if @board.comments.count %>
    <!-- この文字消してええ  -->
    <h2 class="mt-14 font-bold">コメント</h2>

    <% @board.comments.each do |comment| %>
      <%#= @board.comments.count %>
      <div class="p-4 mb-4 w-full border-b-2">
        <%= simple_format(comment.comment) %>
        <div class="flex justify-end gap-4 text-sm ">
          <p><%= comment.name %></p>
          <p><%= comment.created_at.to_s(:datetime_jp) %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</section>