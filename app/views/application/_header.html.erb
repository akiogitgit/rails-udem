          <li><%= button_to "ログアウト", logout_path, method: :delete, class: "" %></li>
        <% else %>
          <li><%= link_to "登録", new_user_path, class: "" %></li>
          <li><%= link_to "ログイン", root_path, class: "" %></li>
        <% end %>
      </ul>

        <% if session[:user_id].present? %>
          login!
        <% else %>
          logout
        <% end %>


      <!-- ページ内検索
      <form class="">
        <input type="search" name="" id="">
        <button type="submit"></button>
      </form>
      -->
