<div>
  <% breadcrumb :user_path_show %>
  <div class="flex justify-between items-center mb-10">
    <div class="flex gap-10 items-center">
      <% breadcrumb :user_path_show, @user %>
      <div class="flex items-center gap-3">
        <div class="w-[70px] h-[70px]"><%= image_tag @user.image_url, class: 'rounded-full w-full h-full' %></div>
        <h1 class="font-bold text-3xl"><%= @user.name %></h1>
      </div>
      <div class="flex gap-3">
        <%= link_to followings_path(@user.id) do %>
          <p><span class="mr-1 font-bold text-2xl"><%= @user.followings.count %></span>フォロー中</p>
        <% end %>
        <%= link_to followers_path(@user.id) do %>
          <p><span class="mr-1 font-bold text-2xl"><%= @user.followers.count %></span>フォロワー</p>
        <% end %>
      </div>
    </div>
      
    <div class="">
      <% if @user.present? && @current_user.present? && @user != @current_user %> <%# この投稿主は、登録してる？ %>
        <% if @current_user.following?(@user) %> <%# フォローしてる？ %>
          <!-- 下のpath全然違うよ -->
          <%= button_to "フォロー外す", user_relation_path(@user.id), method: :delete, class: "primary-btn opacity-60" %>
        <% else %>
          <%= button_to "フォローする", user_relations_path(@user.id), method: :post, class: "primary-btn" %>
        <% end %>
      <% else %>
        <%= link_to "編集", users_path, class: "px-4 py-1 border border-black rounded-full duration-300 hover:bg-black hover:text-white" %>
      <% end %>
    </div>
  </div>

  <% if @boards.present? %>
    <%= render "shared/boards" %>
  <% else %>
    <div class="my-4">投稿はありません</div>
  <% end %>
</div>