<div>
  <div class="flex gap-10 mb-10">
    <h1 class="font-bold"><%= @user.name %></h1>
    <div class="flex gap-3">
      <%= link_to followings_path do %>
        <p><span class="mr-1 font-bold text-2xl"><%= @user.followings.count %></span>フォロー中</p>
      <% end %>
      <%= link_to followers_path do %>
        <p><span class="mr-1 font-bold text-2xl"><%= @user.followers.count %></span>フォロワー</p>
      <% end %>
    </div>
    
  <div class="flex justify-start">
    <% if @user.present? && @current_user.present? && @user != @current_user %> <%# この投稿主は、登録してる？ %>
      <% if @current_user.following?(@user) %> <%# フォローしてる？ %>
        <!-- 下のpath全然違うよ -->
        <%= button_to "フォロー外す", user_relation_path(@user.id), method: :delete, class: "primary-btn opacity-60" %>
      <% else %>
        <%= button_to "フォローする", user_relations_path(@user.id), method: :post, class: "primary-btn" %>
      <% end %>
    <% end %>
  </div>
  </div>

  <% if @boards.present? %>
    <%= render "shared/boards" %>
  <% else %>
    <div class="my-4">投稿はありません</div>
  <% end %>
</div>