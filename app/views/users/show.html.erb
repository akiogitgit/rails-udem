<div>
  <%# breadcrumb :user_path_show %>
  <div class="flex justify-between items-center mb-10">
    <div class="flex gap-10 items-center">
      <% breadcrumb :user_path_show, @user %>
      <div class="flex items-center gap-3">
        <div class="w-[70px] h-[70px]"><%= image_tag @user.image_url, class: 'rounded-full w-full h-full' %></div>
        <h1 class="font-bold text-2xl"><%= @user.name %></h1>
      </div>
      <div class="flex gap-3 text-sm">
        <%= link_to followings_path(@user.id) do %>
          <p><span class="mr-1 font-bold text-2xl"><%= @user.followings.count %></span>フォロー中</p>
        <% end %>
        <%= link_to followers_path(@user.id) do %>
          <p><span class="mr-1 font-bold text-2xl"><%= @user.followers.count %></span>フォロワー</p>
        <% end %>
      </div>
    </div>
      
    <div class="">
      <% if @user.present? && @current_user.present? && @user != @current_user %> <%# この投稿主は、登録してる？ %>
        <% if @current_user.following?(@user) %> <%# フォローしてる？ %>
          <!-- 下のpath全然違うよ -->
          <%= button_to "フォロー外す", user_relation_path(@user.id), method: :delete, class: "primary-btn opacity-60" %>
        <% else %>
          <%= button_to "フォローする", user_relations_path(@user.id), method: :post, class: "primary-btn" %>
        <% end %>
      <% else %>
        <%= link_to "編集", edit_user_path, class: "px-4 py-1 border border-black rounded-full duration-300 hover:bg-black hover:text-white" %>
      <% end %>
    </div>
  </div>

  <div class="py-4 mb-10">
    <div class="flex justify-between items-center">
      <div class="flex gap-3 items-center">
        <div class="w-[70px] h-[70px]"><%= image_tag @user.image_url, class: 'rounded-full w-full h-full' %></div>
        <%= link_to @user do %>
          <div class="mr-2 text-2xl font-bold flex items-center"><%= @user.name %></div>
        <% end %>
      </div>
      
      <% if @user != @current_user %> <%# 投稿者は登録していて自分ではない？ %>
        <div class="flex">
          <% if @current_user.following?(@user) %> <%# フォローしてる？ %>
            <%= button_to "フォロー外す", user_relation_path(@user.id), method: :delete, class: "primary-btn opacity-60 z-10" %>
          <% else %>
            <%= button_to "フォローする", user_relations_path(@user.id), method: :post, class: "primary-btn z-10" %>
          <% end %>
        </div>
      <% else %>
        <%= link_to "編集", edit_user_path, class: "px-4 py-1 border border-black rounded-full duration-300 hover:bg-black hover:text-white" %>
      <% end %>
    </div>

    <div class="flex gap-4 mt-4">
      <%= link_to followings_path(@user.id) do %>
        <p>
          <span class="mr-1 font-bold text-2xl">
            <%= @user.followings.count %>
          </span>フォロー中
        </p>
      <% end %>
      <%= link_to followers_path(@user.id) do %>
        <p>
          <span class="mr-1 font-bold text-2xl">
            <%= @user.followers.count %>
          </span>フォロワー
        </p>
      <% end %>
    </div>
  </div>

  <% if @boards.present? %>
    <%= render "shared/boards" %>
  <% else %>
    <div class="my-4">投稿はありません</div>
  <% end %>
</div>