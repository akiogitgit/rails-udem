<h1 class="font-bold mb-4">ユーザー一覧</h1>
<div class="mt-4 mb-10">
  <%= search_form_for @q, url: users_path do |f| %>
    <div class="flex gap-2 justify-center items-center sm:flex-row sm:justify-end">
      <div class="flex flex-col gap-2 sm:flex-row">
        <div><%= f.text_field :name_cont, placeholder: "ユーザー名", class: "form-input" %></div>
      </div>
      <div class="inline" ><%= f.submit "検索", class: "secondary-btn" %></div>
    </div>
  <% end %>
</div>

<%= render "user_relations/users" %>
<% breadcrumb :user_path %>
