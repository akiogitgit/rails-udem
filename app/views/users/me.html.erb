<div>
  <div class="flex gap-10 mb-10">
    <h1 class="font-bold"><%= @current_user.name %></h1>
    <div class="flex gap-3">
      <%= link_to followings_path do %>
        <p><span class="mr-1 font-bold text-2xl"><%= @current_user.followings.count %></span>フォロー中</p>
      <% end %>
      <%= link_to followers_path do %>
        <p><span class="mr-1 font-bold text-2xl"><%= @current_user.followers.count %></span>フォロワー</p>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to followings_path do %>
      <td>フォロー数: <%= @current_user.followings.count %></td>
    <% end %>
    <%= link_to followers_path do %>
      <td>フォロワー数: <%= @current_user.followers.count %></td>
    <% end %>
  </div>

  <% if @boards.present? %>
    <% @boards.each do |board|  %>
      <div class="flex text-[16px]">
        <%= link_to board do %>
          <ul class="p-2 grid grid-cols-4 text-center font-bold hover:bg-gray-300 border-b-2">
            <li><%= board.id %></li>
            <li><%= board.title %></li>
            <li><%= board.name %></li>
            <li><%= board.created_at.to_s(:datetime_jp) %></li>
            <!--<li><%= board.updated_at.to_s(:datetime_jp) %></li>-->
          </ul>
        <% end %>
        <div class="hidden sm:block mt-4 text-center w-[100px] text-md">
          <%= button_to "削除", board, method: :delete, class: "danger-btn font-bold" %><!--buttonだと行けた-->
        </div>
      </div>
    <% end %>
  <% end %>
</div>