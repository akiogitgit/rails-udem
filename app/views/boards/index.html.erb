<div>
    <div class="mb-10 flex justify-between">
        <h1 class="text-xl">
            掲示板一覧
        </h1>
        <div class="">
            <a href="/boards/new" class="secondary-btn">新規作成</a>
        </div>
    </div>
    <section class="w-full">
        <ul class="p-2 grid grid-cols-5 text-center bg-black text-white font-bold">
            <li>ID</li>
            <li>タイトル</li>
            <li>作成者</li>
            <li>作成日時</li>
            <li>更新日時</li>
        </ul>
    </section>

    <section>
        <% @board.each do |board|  %>
            <ul class="p-2 grid grid-cols-5 text-center font-bold hover:bg-gray-300 border-b-2">
                <!--
                <li>雑談掲示板</li>
                <li>Taro</li>
                <li>2021/2/19</li>
                <li>2021/2/19</li>
                -->
                <li><%= board.id %></li>
                <li><%= board.title %></li>
                <li><%= board.name %></li>
                <li><%= board.created_at.to_s(:datetime_jp) %></li>
                <li><%= board.updated_at.to_s(:datetime_jp) %></li>
            </ul>
        <% end %>
    </section>
</div>