<div class="flex justify-between items-center">
  <h1>掲示板作成</h1>
    <%= link_to "掲示板一覧", root_path, class: "secondary-btn" %>
</div>

<%# %=は、Rubyの実行結果を埋め込む formも実行結果を送るから必要 %>
<%# method: post %>
<%= form_with model: @board, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, class: "form-input", rows: 10 %>
  </div>
  <div>
    <%= f.submit "保存", class: "primary-btn" %>
  </div>
<% end %>


