<div class="flex items-center">
  <h1>掲示板作成</h1>
  <div class="ml-auto">
    <a href="/boards" class="py-1 px-3 border border-black rounded-md hover:bg-black hover:text-white duration-300">
      掲示板一覧
    </a>
  </div>
</div>

<%# %=は、Rubyの実行結果を埋め込む formも実行結果を送るから必要 %>
<%# method: post %>
<%= form_with model: @board, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title, class: "form-input" %>
  </div>
  <div class="form-group">
    <%= f.label :body, "本文" %>
    <%= f.text_area :body, class: "form-input", rows: 10 %>
  </div>
  <div>
    <%= f.submit "保存", class: "primary-btn" %>
  </div>
<% end %>

<%
=begin%>
  <form class="flex flex-col gap-4">
  <div class="form-group">
    <label for="name">名前</label>
    <input id="name" class="form-input"/>
